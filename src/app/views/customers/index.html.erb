<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "first_name" %></th>
      <th><%= sortable "last_name" %></th>
      <th><%= sortable "birth_date" %></th>
      <th><%= sortable "id_card_number" %></th>
      <th><%= sortable "street" %></th>
      <th><%= sortable "city" %></th>
      <th><%= sortable "zip" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.birth_date %></td>
        <td><%= customer.id_card_number %></td>
        <td><%= customer.street %></td>
        <td><%= customer.city %></td>
        <td><%= customer.zip %></td>
        <td><%= link_to 'Show', customer,class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer),class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' },class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul class="pagination">
<%= will_paginate @customers %>
</ul>
<div class="fixed-action-btn horizontal direction-top direction-left">
  <%= link_to material_icon.add, new_customer_path, {:class=>"btn-floating btn-large waves-effect waves-light red" } %>
</div>
