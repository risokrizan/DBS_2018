<p id="notice"><%= notice %></p>

<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Text</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.author %></td>
        <td><%= announcement.text %></td>
        <td><%= announcement.date %></td>
        <td><%= link_to 'Show', announcement,class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Edit', edit_announcement_path(announcement),class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' },class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul class="pagination">
  <%= will_paginate @announcements %>
</ul>
<div class="fixed-action-btn horizontal direction-top direction-left">
  <%= link_to material_icon.add, new_announcement_path, {:class=>"btn-floating btn-large waves-effect waves-light red" } %>
</div>