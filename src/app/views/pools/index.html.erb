<p id="notice"><%= notice %></p>

<h1>Pools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Income</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pools.each do |pool| %>
      <tr>
        <td><%= pool.name %></td>
        <td><%= pool.currency_id %></td>
        <td><%= pool.income %></td>
        <td><%= link_to 'Show', pool,class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Edit', edit_pool_path(pool),class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Destroy', pool, method: :delete, data: { confirm: 'Are you sure?' },class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul class="pagination">
  <%= will_paginate @pools %>
</ul>
<div class="fixed-action-btn horizontal direction-top direction-left">
  <%= link_to material_icon.add, new_pool_path, {:class=>"btn-floating btn-large waves-effect waves-light red" } %>
</div>
