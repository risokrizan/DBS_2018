<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Ammount</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.name %></td>
        <td><%= transaction.trans_type_id %></td>
        <td><%= transaction.ammount %></td>
        <td><%= transaction.date %></td>
        <td><%= link_to 'Show', transaction,class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction),class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' },class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul class="pagination">
  <%= will_paginate @transactions %>
</ul>
<div class="fixed-action-btn horizontal direction-top direction-left">
  <%= link_to material_icon.add, new_transaction_path, {:class=>"btn-floating btn-large waves-effect waves-light red" } %>
</div>
